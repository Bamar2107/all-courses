doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Dynamic Quotes
    link(rel='stylesheet' href='style.css')
    link(href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Hurricane&display=swap' rel='stylesheet')
    link(href='https://unpkg.com/aos@2.3.1/dist/aos.css' rel='stylesheet')
  body
    h1 Dynamic Quotes Using Quotes API
    div.container
      div#quotes(data-aos='zoom-in-up')
        a#tweet(href='https://twitter.com/compose/tweet')
          img(src='./images/twitter.jpg' alt='twitter' title='tweet')
        div#display_quotes
        div#display_author
      button#newquotes(onclick='getQuotes()' data-aos='zoom-in-up') New Quotes
    script(src='https://unpkg.com/aos@2.3.1/dist/aos.js')
    script(src='./JavascriptQuotes/script.js')


