doctype html 
html 
    head 
        title 
    body 
        form(method='post', action='/handleForm', name='registration')
            table 
                tr 
                    td Name 
                    td 
                        input(type='text' name='username', size='30')
                tr
                    td Email
                    td
                        input(type="text", name='email', size='30')
                tr 
                    td Password
                    td
                        input(type="password" name='userpass', size='30')
                tr 
                    td Gender 
                    td 
                        label Male 
                        input(type="radio", name='gender', value='male')
                        label Female 
                        input(type="radio", name="gender", value="female")
                tr 
                    td City 
                    td 
                        select(name='city')
                            option(value='0') [--choose one--]
                            option(value='Mumbai') Mumbai
                            option(value='pune') Pune
                            option(value='Bhawanipatna') Bhawanipatna 
                tr 
                    td(colspan='2' align='right')
                        input(type="submit" value='send')


